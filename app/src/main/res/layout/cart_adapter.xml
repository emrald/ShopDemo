<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/bg_color"
    android:layout_marginBottom="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        >
        <LinearLayout
            android:id="@+id/pizzalinearlayout"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">


                    <TextView
                        android:paddingLeft="8dp"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:textColor="@color/green"
                        android:textSize="@dimen/large"
                        android:maxLines="1"
                        android:id="@+id/finalCartItemName" />
                    <TextView
                        android:layout_marginRight="8dp"
                        android:paddingRight="8dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:textColor="@color/green"
                        android:textSize="@dimen/medium"
                        android:id="@+id/finalCartItemPrice" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp">
                    <ImageView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="2dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/finalCartImage" />

                    <TextView

                        android:gravity="right|top"
                        android:layout_marginRight="8dp"
                        android:paddingTop="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/medium"
                        android:textColor="@color/green"
                        android:maxLines="4"
                        android:id="@+id/prodyQty" />

                    <TextView

                        android:visibility="gone"
                        android:layout_marginRight="8dp"
                        android:paddingTop="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/medium"
                        android:textColor="@color/green"
                        android:maxLines="4"
                        android:text="There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly"
                        android:id="@+id/itemDesc" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
