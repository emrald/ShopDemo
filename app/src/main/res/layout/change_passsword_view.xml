<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="com.eatmore.demo.dk.eatmore.demo.fragments.ChangePassswordFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_fragment" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumheight"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <dk.eatmore.demo.myutils.PasswordView
                        android:id="@+id/et_old_password"
                        style="@style/styleEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_bg"
                        android:hint="@string/type_old_pass"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingEnd="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="4dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/darkgray"
                        android:textColorHint="@color/darkgray"
                        android:textSize="@dimen/medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumheight"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <dk.eatmore.demo.myutils.PasswordView
                        android:id="@+id/editChangePass"
                        style="@style/styleEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_bg"
                        android:hint="@string/type_new_pass"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingEnd="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="4dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/darkgray"
                        android:textColorHint="@color/darkgray"
                        android:textSize="@dimen/medium" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumheight"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <dk.eatmore.demo.myutils.PasswordView
                        android:id="@+id/editconfirmPass"
                        style="@style/styleEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_bg"
                        android:hint="@string/confirm_password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingEnd="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="4dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/darkgray"
                        android:textColorHint="@color/darkgray"
                        android:textSize="@dimen/medium" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight=".9"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mediumheight"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_green"
                    android:text="@string/change_password"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="@dimen/medium" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
