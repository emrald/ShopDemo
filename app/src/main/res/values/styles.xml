<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryDark">@color/transparent_gray</item>
        <item name="colorAccent">#000</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:popupMenuStyle">@style/AndroidSRC.PopupMenu</item>
        <item name="android:itemTextAppearance">@style/AndroidSRC.TextAppearance</item>
    </style>

    <style name="AndroidSRC.PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#21B6A8</item>
    </style>

    <style name="AndroidSRC.TextAppearance" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextInputLayout" parent="AppTheme">
        <item name="colorAccent">@color/black</item>

    </style>


    <!--Text Input Style-->
    <style name="styleTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">#000</item><!--//?android:attr/textColorSecondary-->
        <item name="android:textColorHint">#000</item>
        <!--?android:attr/textColorSecondaryInverse-->
    </style>


    <!--EditText-->
    <style name="styleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000</item><!--?android:attr/textColorSecondary-->
        <item name="android:textColorHint">#000</item><!--?android:attr/textColorSecondaryInverse-->
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="CheckBoxTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="TintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="MultiChoiceDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent_color</item>
        <!--<item name="android:colorAccent">#E91E63</item>-->
    </style>
</resources>
